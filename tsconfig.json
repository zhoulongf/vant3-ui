{
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        //    "noImplicitThis": true,
        "noImplicitThis": false,
        "esModuleInterop": true,
        "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
        "moduleResolution": "node"
    },
    "include": [
        "types/**/*",
        "src/**/*",
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.js",
        "node_modules"
    ]
}